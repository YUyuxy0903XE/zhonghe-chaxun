{
  "name": "police-case-dashboard",
  "version": "1.0.0",
  "description": "警案态势大屏系统",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev:frontend": "cd frontend && python -m http.server 8080",
    "dev:backend": "cd backend && node server.js",
    "dev:electron": "electron .",
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:3000 http://localhost:8080 && npm run dev:electron\"",
    "build": "electron-builder",
    "install:all": "pnpm install && cd backend && pnpm install && cd ../electron && pnpm install",
    "setup:db": "node database/init.js"
  },
  "keywords": [
    "dashboard",
    "police",
    "visualization"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": "24.11.10"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "mysql2": "^3.15.3",
    "pdfkit": "^0.15.0",
    "pg": "^8.16.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.police-case-dashboard",
    "productName": "警案态势大屏",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "backend/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,suo,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "sqlite3"
    ]
  }
}
